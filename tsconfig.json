{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "outDir": ".",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./**/node_modules"]
}
